// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      String   // ADMIN, DOCTOR, SECRETARY, ACCOUNTANT
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  appointments Appointment[]
  prescriptions Prescription[]
}

model Patient {
  id             String   @id @default(uuid())
  firstName      String
  lastName       String
  phone          String?
  nationalId     String?  @unique
  address        String?
  bloodGroup     String?
  allergies      String?
  medicalHistory String? // JSON string
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  appointments  Appointment[]
  invoices      Invoice[]
  prescriptions Prescription[]
}

model Appointment {
  id        String   @id @default(uuid())
  date      DateTime
  status    String   // PENDING, CONFIRMED, COMPLETED, CANCELLED
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  patientId String
  patient   Patient @relation(fields: [patientId], references: [id])
  
  doctorId  String
  doctor    User    @relation(fields: [doctorId], references: [id])
}

model Invoice {
  id            String   @id @default(uuid())
  amount        Float
  taxAmount     Float    @default(0)
  totalAmount   Float
  status        String   // PAID, UNPAID
  paymentMethod String?  // CASH, CCP, BARIDIMOB
  items         String   // JSON string of line items
  nif           String?  // Tax ID
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  patientId String
  patient   Patient @relation(fields: [patientId], references: [id])
}

model Prescription {
  id        String   @id @default(uuid())
  content   String   // JSON string of medications
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  patientId String
  patient   Patient @relation(fields: [patientId], references: [id])
  
  doctorId  String
  doctor    User    @relation(fields: [doctorId], references: [id])
}
